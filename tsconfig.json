{
    "compilerOptions": {
      "target": "es2015",
      "alwaysStrict": true,
      "strict": true,
      "allowUnreachableCode": false,
      "allowJs": true,
      "removeComments": true,
      "noEmitOnError": false,
      "declarationMap": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "declaration":true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "exclude": ["./packages/**/lib/","./packages/**/webpack.config.js"]
}